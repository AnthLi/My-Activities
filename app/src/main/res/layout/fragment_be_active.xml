<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#fff">

  <Switch
      android:id="@+id/switchBeActive"
      android:text=""
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="24sp"
      android:textStyle="bold" />

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      style="@style/sample_activity"
      android:orientation="vertical">

    <TextView
      android:id="@+id/txtActivity"
      android:drawableLeft="@drawable/ic_running_black_48dp"
      android:drawableStart="@drawable/ic_running_black_48dp"
      android:text="@string/activity_initial"
      android:textSize="20sp"
      android:textColor="@android:color/holo_blue_dark"
      android:layout_width="1dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:gravity="center" />

    <com.androidplot.pie.PieChart
        android:id="@+id/beActivePieChart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        androidPlot.title.text="Activity Levels"
        androidPlot.title.labelPaint.textSize="@dimen/title_font_size"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_gravity="center"
          android:text="Chart Size"
          android:id="@+id/pieChartSizeSeekLabel"/>

      <SeekBar
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:max="90"
          android:progress="50"
          android:id="@+id/pieChartSizeSeekBar"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_gravity="center"
          android:text="unknown"
          android:id="@+id/pieChartSizeTextView"/>
    </LinearLayout>
  </LinearLayout>

</RelativeLayout>